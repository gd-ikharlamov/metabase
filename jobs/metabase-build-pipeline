#!/usr/bin/env groovy

def version = "0.28.0"

node {

    git_repo = "https://github.com/metabase/metabase.git"

    stage("Pull repository") {
        git git_repo
    }

    stage("Update version") {
        sh "./bin/build version"
    }

    stage("Build frontend") {
        docker.image("docker.io/node:8-alpine").withRun{
            sh "./bin/build frontend"
        }
    }

    stage("Build uberjar") {
        docker.image("docker.io/clojure:lein-alpine").withRun{
            sh "./bin/build uberjar"
        }
    }

    stage("Cleanup"){
        deleteDir()
    }
}
